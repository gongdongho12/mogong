extends templet

block prepend menus
    +link(auth ? '/logout' : '/login', auth ? '로그아웃' : '로그인')
    +link(auth ? '/user/' + user.id : '/register', auth ? '마이페이지' : '회원가입')

block append styles
    script(src='/javascripts/timetable.min.js')
    link(href='/stylesheets/timetablejs.css', rel='stylesheet')
    link(href='/stylesheets/demo.css', rel='stylesheet')

block append contents
    .container
        .timetable
        script.
            var timetable = new Timetable();
            timetable.setScope(9, 20)
            timetable.addLocations(['월', '화', '수', '목', '금']);
            timetable.addEvent('회의 가능', '월', new Date(2015, 7, 17, 9, 00), new Date(2015, 7, 17, 11, 30), {
                url: '#'
            });
            timetable.addEvent('회의 가능', '화', new Date(2015, 7, 17, 12), new Date(2015, 7, 17, 13), {
                url: '#'
            });
            timetable.addEvent('회의 가능', '수', new Date(2015, 7, 17, 13, 30), new Date(2015, 7, 17, 15), {
                url: '#'
            });
            timetable.addEvent('회의 가능', '목', new Date(2015, 7, 17, 17, 45), new Date(2015, 7, 17, 19, 30), {
                url: '#'
            });
            timetable.addEvent('회의 가능', '금', new Date(2015, 7, 17, 10), new Date(2015, 7, 17, 13, 30), {
                url: '#'
            });
            var renderer = new Timetable.Renderer(timetable);
            renderer.draw('.timetable');
