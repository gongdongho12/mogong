                //    button.btn.btn-outline-danger.pull-right(type='button', data-toggle='modal', data-target='#deleteConfirmModal')
                //        i.fa.fa-trash-o(aria-hidden='true')  삭제

        br
        //button.btn.btn-outline-dark.pull-right(type='button', onclick="location.href='/board/write'")
        //    i.fa.fa-pencil(aria-hidden='true')  글쓰기
        footer
            p © Company 2017
        br

block append contents
    .container
        .row.justify-content-center
            .col-md-12
                .card
                    .card-header 팀원 목록
                    table.table
                        thead
                            tr
                                th
                                th 아이디
                                th 이름
                                th 권한
                                th 시간표 링크
                        tbody
                            +team(1, 'ka1273', '강동호', 2, 'http://everytime.kr/timetable/2017/2/6714113')
                br
                a.btn.btn-outline-dark.pull-right(href='/team/add', role='button', aria-pressed='true')
                    i.fa.fa-user-plus(aria-hidden='true')  팀원 추가
            .col-md-12
                .card
                    .card-header 게시물
                    table.table
                        thead
                            tr
                                th
                                th 제목
                                th 작성자
                                th 작성일
                        tbody
                br
                a.btn.btn-outline-dark.pull-right(href='/board/write', role='button', aria-pressed='true')
                    i.fa.fa-pencil(aria-hidden='true')  글쓰기
        footer
            p © Company 2017
