extends templet

mixin board(id, title, author, name, date)
    tr
        td= id
        td= title
        td= name
        td= date

mixin team(id, user_id, name, type, table_url)
    tr
        td= id
        td= user_id
        td= name
        td= type
        td= table_url

block append scripts
    script(src='/javascripts/board.js')

block prepend menus
    +link(auth ? '/logout' : '/login', auth ? '로그아웃' : '로그인')
    +link(auth ? '/user/' + user.id : '/register', auth ? '마이페이지' : '회원가입')

block append contents
    .container
        .row.justify-content-center
            .col-12
                .card.text-center
                    .card-header.justify-content-between
                        h5.mb-1 title
                    .card-body 쌸라쌸라
                br
                input.btn.btn-outline-primary(type='submit', value='목록', onclick="location.href='/board'")
